{
	"name": "electron-boilerplate",
	"productName": "Electron Boilerplate",
	"version": "1.0.0",
	"description": "The best electron boilerplate to get you started.",
	"license": "MIT",
	"repository": "D3VSJ/Electron-Boilerplate",
	"author": {
		"name": "Sanjay Sunil",
		"email": "D3VSJ@protonmail.com",
		"url": "https://sanjaysunil.me"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"win": "electron-builder --windows"
	},
	"devDependencies": {
		"electron": "^7.1.1",
		"electron-builder": "^21.2.0"
	},
	"build": {
		"appId": "com.company.AppName",
		"mac": {
			"category": "public.app-category.developer-tools",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Development"
		}
	}
}
